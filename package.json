{
  "name": "unikvstore",
  "version": "2.0.13",
  "description": "A utility library for managing storages through a simple key-value pair storage interface, including localStorage, google drive, dropbox, etc.",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "files": [
    "dist/**/*"
  ],
  "author": {
    "name": "ivanzz",
    "email": "ivanzz.eth@gmail.com",
    "url": "https://github.com/ivanzzeth/unikvstore"
  },
  "keywords": [
    "key-value",
    "storage",
    "typescript",
    "google drive",
    "dropbox"
  ],
  "homepage": "https://github.com/ivanzzeth/unikvstore",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivanzzeth/unikvstore.git"
  },
  "bugs": {
    "url": "https://github.com/ivanzzeth/unikvstore/issues"
  },
  "engines": {
    "node": ">= 18"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~20",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "~7.6",
    "@typescript-eslint/parser": "~7.6",
    "eslint": "~8.56",
    "eslint-config-prettier": "~9.1",
    "eslint-plugin-jest": "~28.2",
    "jest": "~29.7",
    "node-localstorage": "^3.0.5",
    "prettier": "~3.2",
    "rimraf": "~5.0",
    "sinon": "^18.0.0",
    "ts-api-utils": "~1.3",
    "ts-jest": "~29.1",
    "tsup": "^8.0.2",
    "typescript": "~5.4",
    "unikvstore": "^2.0.4"
  },
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsup src/index.ts --format cjs --dts --shims --tsconfig tsconfig.json",
    "build:release": "npm run clean && npm run build",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "npm run clean && jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "prepublish": "npm run build:release",
    "test:watch": "jest --watch"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.6.8",
    "dropbox": "^10.34.0",
    "tslib": "~2.6"
  },
  "volta": {
    "node": "20.12.2"
  }
}
